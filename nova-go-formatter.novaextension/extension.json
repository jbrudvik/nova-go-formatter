{
  "identifier": "me.brudvik.nova-go-formatter",
  "name": "Go Formatter",
  "organization": "Jeremy Brudvik",
  "description": "Formats Go code",
  "version": "0.0.2",
  "categories": ["commands", "formatters"],
  "repository": "https://github.com/jbrudvik/nova-go-formatter",
  "bugs": "https://github.com/jbrudvik/nova-go-formatter/issues",
  "license": "MIT",
  "main": "main.js",
  "activationEvents": ["onLanguage:go"],
  "entitlements": {
    "process": true,
    "filesystem": "readonly"
  },
  "commands": {
    "editor": [
      {
        "title": "Format Go code",
        "command": "go-formatter.goFormat",
        "when": "editorHasFocus && editorSyntax == 'go'"
      }
    ]
  }
}
